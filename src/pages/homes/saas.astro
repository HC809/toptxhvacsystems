---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Features from '~/components/widgets/Features.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Content from '~/components/widgets/Content.astro';

import { headerData } from '~/navigation';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';

const metadata = {
  title: 'Top TX HVAC Systems',
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      {...headerData}
      actions={[
        {
          variant: 'secondary',
          text: 'Login',
          href: '#',
        },
        {
          variant: 'primary',
          text: 'Get a Quote',
          href: '#',
        },
      ]}
      isSticky
    />
  </Fragment>

  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="Texas's Trusted HVAC Partner"
    actions={[
      { variant: 'primary', target: '_blank', text: 'Request a Quote', href: '/quote' },
      { text: 'Learn more', href: '#features' },
    ]}
    image={{
      src: '~/assets/images/home.svg',
      alt: 'HVAC Hero Image',
      class: 'translate-x-12'
    }}
  >
    <Fragment slot="title">
      Reliable Heating and Cooling Solutions <br /> for Your <span class="text-accent dark:text-white highlight"
        >Home and Business</span
      >
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Experience year-round comfort with Top TX HVAC Systems. We specialize in installation, maintenance, and repair of heating and cooling systems tailored to your needs.
      </span>
    </Fragment>
  </Hero2>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    title="Why Choose Top TX HVAC Systems?"
    subtitle="Discover why we are Texas's top choice for HVAC services."
    columns={2}
    items={[
      {
        title: 'Energy-Efficient Solutions',
        description:
          'Our HVAC systems are designed to save energy while maintaining optimal performance, reducing your utility bills and environmental impact.',
        icon: 'tabler:leaf',
      },
      {
        title: 'Expert Technicians',
        description: `Our team of certified technicians ensures every installation and repair is done with precision and care.`,
        icon: 'tabler:tool',
      },
      {
        title: '24/7 Emergency Services',
        description:
          'We provide around-the-clock support for all your heating and cooling emergencies. Comfort is just a call away!',
        icon: 'tabler:clock',
      },
      {
        title: 'Custom Maintenance Plans',
        description: `Protect your investment with maintenance plans designed to keep your HVAC systems running efficiently year-round.`,
        icon: 'tabler:settings',
      },
      {
        title: 'Indoor Air Quality Solutions',
        description: `Breathe easy with air purification and ventilation systems that improve the air quality in your home or office.`,
        icon: 'tabler:air-conditioning',
      },
      {
        title: 'Affordable Pricing',
        description: `We offer competitive rates and financing options to fit your budget without compromising quality.`,
        icon: 'tabler:cash',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    title="Our Services"
    subtitle="Explore our wide range of HVAC solutions tailored to meet your needs."
    isReversed
    items={[
      {
        title: 'Residential Services',
        description:
          'From furnace repairs to AC installations, we ensure your home stays comfortable in every season.',
      },
      {
        title: 'Commercial HVAC',
        description: `We specialize in designing and maintaining HVAC systems for businesses of all sizes, ensuring efficiency and reliability.`,
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1605310901681-03e3b8f18a4b?ixlib=rb-4.0.3&auto=format&fit=crop&w=1671&q=80',
      alt: 'HVAC Services',
    }}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Get Started"
    subtitle="Contact us today to schedule your service or request a free consultation."
    callToAction={{
      text: 'Contact Us',
      href: '/contact',
    }}
    items={[
      {
        title: 'Email us',
        description: 'support@toptexashvac.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Call us',
        description: '+1 (713) 555-1234',
        icon: 'tabler:phone',
      },
      {
        title: 'Visit us',
        description: 'Houston, TX',
        icon: 'tabler:map-pin',
      },
    ]}
  />

  <!-- BlogLatestPost Widget **************** -->

  <BlogLatestPosts
    id="blog"
    title="HVAC Tips and Insights"
    information={`Stay informed with the latest trends, maintenance tips, and energy-saving strategies in the HVAC industry.`}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </BlogLatestPosts>
</Layout>
