---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Features from '~/components/widgets/Features.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import { headerData } from '~/navigation';


const metadata = {
  title: 'Top TX HVAC Systems',
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      {...headerData}
      actions={[
        // {
        //   variant: 'secondary',
        //   text: 'Login',
        //   href: '#',
        // },
        {
          variant: 'primary',
          text: 'Get a Quote',
          href: '#',
        },
      ]}
      isSticky
      showToggleTheme={true}
    />
  </Fragment>

  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="Texas's Trusted HVAC Partner"
    actions={[
      { variant: 'primary', target: '_blank', text: 'Request a Quote', href: '/quote' },
      { text: 'Learn more', href: '#features' },
    ]}
    image={{
      src: '~/assets/images/home.svg',
      alt: 'HVAC Hero Image',
    }}
  >
    <Fragment slot="title">
      Reliable Heating and Cooling Solutions <br /> for Your <span class="text-accent dark:text-white highlight"
        >Home and Business</span
      >
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Experience year-round comfort with Top TX HVAC Systems. We specialize in installation, maintenance, and repair
        of heating and cooling systems tailored to your needs.
      </span>
    </Fragment>
  </Hero2>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    title="Why Choose Top TX HVAC Systems?"
    subtitle="Discover why we are Texas's top choice for HVAC services."
    columns={2}
    items={[
      {
        title: 'Energy-Efficient Solutions',
        description:
          'Our HVAC systems are designed to save energy while maintaining optimal performance, reducing your utility bills and environmental impact.',
        icon: 'tabler:leaf',
      },
      {
        title: 'Expert Technicians',
        description: `Our team of certified technicians ensures every installation and repair is done with precision and care.`,
        icon: 'tabler:tool',
      },
      {
        title: '24/7 Emergency Services',
        description:
          'We provide around-the-clock support for all your heating and cooling emergencies. Comfort is just a call away!',
        icon: 'tabler:clock',
      },
      {
        title: 'Custom Maintenance Plans',
        description: `Protect your investment with maintenance plans designed to keep your HVAC systems running efficiently year-round.`,
        icon: 'tabler:settings',
      },
      {
        title: 'Indoor Air Quality Solutions',
        description: `Breathe easy with air purification and ventilation systems that improve the air quality in your home or office.`,
        icon: 'tabler:air-conditioning',
      },
      {
        title: 'Affordable Pricing',
        description: `We offer competitive rates and financing options to fit your budget without compromising quality.`,
        icon: 'tabler:cash',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    title="Our Services"
    subtitle="Explore our wide range of HVAC solutions tailored to meet your needs."
    isReversed
    items={[
      {
        title: 'Residential Services',
        description: 'From furnace repairs to AC installations, we ensure your home stays comfortable in every season.',
      },
      {
        title: 'Commercial HVAC',
        description: `We specialize in designing and maintaining HVAC systems for businesses of all sizes, ensuring efficiency and reliability.`,
      },
    ]}
    image={{
      src: '~/assets/images/work.svg',
      alt: 'HVAC Services',
    }}
  />

  <!-- BlogLatestPosts Widget **************** -->

  <BlogLatestPosts
    id="brands"
    title="Trusted HVAC Brands"
    information={`We partner with industry-leading manufacturers to provide you with reliable, energy-efficient heating and cooling solutions.`}
    linkText="Learn More About Our Products"
    count={4}
    posts={[
      {
        id: 'trane',
        title: 'Trane',
        slug: 'trane',
        permalink: 'https://www.trane.com/',
        publishDate: new Date('2024-01-01'),
        image: '~/assets/images/trane.svg',
        description: 'Known for their exceptional reliability and innovative technology in both residential and commercial HVAC systems.',
      },
      {
        id: 'carrier',
        title: 'Carrier',
        slug: 'carrier',
        permalink: 'https://www.carrier.com/',
        publishDate: new Date('2024-01-01'),
        image: '~/assets/images/carrier.svg',
        description: 'Pioneers in HVAC technology, offering high-efficiency solutions for optimal indoor comfort.',
      },
      {
        id: 'goodman',
        title: 'Goodman',
        slug: 'goodman',
        permalink: 'https://www.goodmanmfg.com/',
        publishDate: new Date('2024-01-01'),
        image: '~/assets/images/goodman.svg',
        description: 'Quality HVAC systems at competitive prices, backed by excellent warranties and dependable performance.',
      },
      {
        id: 'lennox',
        title: 'Lennox',
        slug: 'lennox',
        permalink: 'https://www.lennox.com/',
        publishDate: new Date('2024-01-01'),
        image: '~/assets/images/lennox.svg',
        description: 'Premium HVAC solutions known for superior efficiency ratings and advanced comfort features.',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </BlogLatestPosts>

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Get Started"
    subtitle="Contact us today to schedule your service or request a free consultation."
    callToAction={{
      text: 'Contact Us',
      href: '/contact',
    }}
    items={[
      {
        title: 'Email us',
        description: 'support@toptexashvac.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Call us',
        description: '+1 (346) 256-1590',
        icon: 'tabler:phone',
      },
      {
        title: 'Visit us',
        description: 'Houston, TX',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
