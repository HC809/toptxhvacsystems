---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText 
    tagline="Contact" 
    title="Let's Connect!" 
    subtitle="Choose your preferred way to contact us. We're here to help!"
  />

  <!-- Alert Notice -->
  <div class="max-w-5xl mx-auto px-4 py-4 mb-8">
    <div class="bg-blue-50 dark:bg-slate-800 border border-blue-200 dark:border-slate-700 rounded-lg p-4">
      <div class="flex items-start md:items-center gap-3">
        <svg xmlns="http://www.w3.org/2000/svg" class="flex-shrink-0 w-8 h-8 md:w-6 md:h-6 text-blue-600 dark:text-blue-400 mt-0.5 md:mt-0" viewBox="0 0 24 24" fill="none" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <p class="text-sm md:text-base text-blue-700 dark:text-blue-300">
          <strong>Important Notice:</strong> For locations beyond 20 miles from our service area, a $100 estimation fee will be applied for on-site quotes. This fee will be credited towards your service if you proceed with our proposal.
        </p>
      </div>
    </div>
  </div>

  <!-- Features2 Widget ************** -->

  <Features2
    title="Contact us directly"
    subtitle="Select the most convenient way to reach us"
    items={[
      {
        title: 'WhatsApp',
        description: 'Chat with us instantly',
        icon: 'tabler:brand-whatsapp',
        callToAction: {
          text: 'Message on WhatsApp',
          href: 'https://wa.me/13463701902',
          target: '_blank',
          class: 'btn btn-primary w-full sm:w-auto flex items-center justify-center gap-2 font-semibold'
        }
      },
      {
        title: 'Facebook Messenger',
        description: 'Connect through Messenger',
        icon: 'tabler:brand-messenger',
        callToAction: {
          text: 'Open Messenger',
          href: 'https://m.me/gabriela.alejandra.148',
          target: '_blank',
          class: 'btn btn-primary w-full sm:w-auto flex items-center justify-center gap-2 font-semibold'
        }
      },
      {
        title: 'Phone',
        description: '(346) 256-1590',
        icon: 'tabler:phone',
        callToAction: {
          text: 'Call or Text',
          href: 'tel:+13463701902',
          class: 'btn btn-primary w-full sm:w-auto flex items-center justify-center gap-2 font-semibold'
        }
      }
    ]}
    columns={3}
    classes={{
      container: 'max-w-5xl mx-auto',
      title: 'text-center mb-8',
      subtitle: 'text-center mb-12',
      items: 'grid-cols-1 md:grid-cols-3 gap-8',
      panel: 'text-center flex flex-col items-center justify-center bg-offset p-6 rounded-lg shadow-lg hover:shadow-xl transition duration-300',
      icon: 'mb-4 w-16 h-16 text-primary',
      //title: 'text-xl font-bold mb-2',
      description: 'text-muted dark:text-gray-400 mb-4',
      action: 'w-full flex justify-center'
    }}
  />

  <!-- Commented out original ContactUs form
  {/* <ContactUs ... /> */} 
  -->

  <Features2
    title="Visit or Mail Us"
    subtitle="Find us at our physical location"
    items={[
      {
        title: 'Office Location',
        description: 'Houston, TX',
        icon: 'tabler:map-pin'
      },
      {
        title: 'Email',
        description: 'support@toptexashvac.com',
        icon: 'tabler:mail'
      },
      {
        title: 'Business Hours',
        description: 'Monday - Sunday: 8:00 AM - 9:00 PM',
        icon: 'tabler:clock'
      }
    ]}
    classes={{
      container: 'max-w-5xl mx-auto',
      title: 'text-center mb-8',
      subtitle: 'text-center mb-12',
      items: 'grid-cols-1 md:grid-cols-3 gap-8',
      panel: 'text-center flex flex-col items-center justify-center p-6',
      icon: 'mb-4 w-16 h-16 text-primary',
      // title: 'text-xl font-bold mb-2',
      description: 'text-muted dark:text-gray-400'
    }}
  />
</Layout>
